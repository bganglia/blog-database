CREATE TABLE Post (
  pid INT PRIMARY KEY,
  postTitle VARCHAR(1000),
  subtitle VARCHAR(1000),
  shortTitle VARCHAR(300),
  summary VARCHAR(2000),
  text TEXT
);

CREATE TABLE Blog (
  blogTitle VARCHAR(1000) PRIMARY KEY,
  slogan VARCHAR(1000),
  owner VARCHAR(20),
  FOREIGN KEY (owner) REFERENCES User(username);
);

CREATE TABLE User (
  username VARCHAR(20) PRIMARY KEY,
  location VARCHAR(100),
  name VARCHAR(100),
  email VARCHAR(100)
)


Subscription
	User
	Blog

Authorship
	Post
	User

Readership
	Post
	User

Posting
	Post
	Blog

Comment
	User
	Post
	Date
