CREATE TABLE Post (
  pid INT PRIMARY KEY,
  postTitle VARCHAR(1000),
  subtitle VARCHAR(1000),
  shortTitle VARCHAR(300),
  summary VARCHAR(2000),
  text TEXT
);

CREATE TABLE Blog (
  blogID INT PRIMARY KEY,
  blogTitle VARCHAR(1000),
  slogan VARCHAR(1000),
  owner VARCHAR(20),
  FOREIGN KEY (owner) REFERENCES User(username);
);

CREATE TABLE User (
  username VARCHAR(20) PRIMARY KEY,
  location VARCHAR(100),
  name VARCHAR(100),
  email VARCHAR(100)
);

CREATE TABLE Subscription (
  username VARCHAR(20),
  blogID INT,
  PRIMARY KEY (username, blogID),
  FOREIGN KEY (blogID) REFERENCES Blog(blogID),
  FOREIGN KEY (username) REFERENCES User(username)
);

Authorship
	Post
	User

Readership
	Post
	User

Posting
	Post
	Blog

Comment
	User
	Post
	Date
