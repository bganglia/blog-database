CREATE TABLE Post (
  pid INT PRIMARY KEY,
  postTitle VARCHAR(1000),
  subtitle VARCHAR(1000),
  shortTitle VARCHAR(300),
  summary VARCHAR(2000),
  text_content TEXT
);

CREATE TABLE User (
  username VARCHAR(20) PRIMARY KEY,
  location VARCHAR(100),
  name VARCHAR(100),
  email VARCHAR(100)
);

CREATE TABLE Blog (
  blogID INT PRIMARY KEY,
  blogTitle VARCHAR(1000),
  slogan VARCHAR(1000),
  owner VARCHAR(20),
  FOREIGN KEY (owner) REFERENCES User(username)
);

Subscription
        User
	Blog

Authorship
	Post
	User

Readership
	Post
	User

CREATE TABLE Posting (
  pid INT,
  blogID INT,
  PRIMARY KEY (pid, blogID),
  FOREIGN KEY (blogID) REFERENCES Blog(blogID),
  FOREIGN KEY (pid) REFERENCES Post(pid)
);

Comment
	User
	Post
	Date
